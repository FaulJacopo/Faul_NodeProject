{{>header}}
<div class="pt-24 min-h-screen">
  <div class="container mx-auto px-4 max-w-2xl">
    <h1 class="text-4xl font-bold text-white mb-8">Contact Us</h1>
    <div class="bg-white/10 p-8 rounded-lg backdrop-blur-sm">
      <form action="/contact/send" method="POST" class="space-y-6">
        <div>
          <label for="name" class="block text-white mb-2">
            Nome
          </label>
          <input
            type="text"
            id="name"
            name="name"
            class="w-full px-4 py-2 bg-white/10 border border-white/20 rounded-md text-white"
            required
          >
        </div>
        <div>
          <label for="email" class="block text-white mb-2">
            Email
          </label>
          <input
            type="email"
            id="email"
            name="email"
            class="w-full px-4 py-2 bg-white/10 border border-white/20 rounded-md text-white"
            required
          >
        </div>
        <div>
          <label for="message" class="block text-white mb-2">
            Messaggio
          </label>
          <textarea
            id="message"
            name="message"
            rows="4"
            class="w-full px-4 py-2 bg-white/10 border border-white/20 rounded-md text-white"
            required
          ></textarea>
        </div>
        <button type="submit" class="w-full px-6 py-2 font-medium transition-colors bg-[#FFB800] hover:bg-[#E5A600] text-black rounded-md">
          Invia
        </button>
      </form>
    </div>

    <div class="mt-12 bg-white/10 p-8 rounded-lg backdrop-blur-sm">
      <h2 class="text-2xl font-bold text-white mb-4">Find Us</h2>
      <div class="space-y-2 text-white/80">
        <p>SB Riva San Vitale</p>
        <p>Via Dell'Indipendenza 2</p>
        <p>6826 Riva San Vitale</p>
        <p>Switzerland</p>
        <p class="mt-4">Email: info@sbriva.ch</p>
        <p>Phone: +41 XX XXX XX XX</p>
      </div>
    </div>
  </div>
</div>
{{>footer}} 