{{>header}}
<main>
  <!-- Hero Section -->
  <section class="relative min-h-screen flex items-center">
    <div class="absolute inset-0">
      <img src="img/boccio.jpg" alt="Bocce court" class="w-full h-full object-cover opacity-50">
      <div class="absolute inset-0 bg-black/50"></div>
    </div>

    <div class="container mx-auto px-4 relative z-1">
      <div class="max-w-2xl">
        <h1 class="text-5xl font-bold text-white mb-4">SB Riva San Vitale</h1>
        <p class="text-white/90 text-lg mb-6">
          La società bocciofila Riva San Vitale vi da il benvenuto sul suo nuovo sito internet
          sul quale si potranno trovare risultati, news, eventi, storia della società e tanto 
          altro ancora.
        </p>
        <a href="/storia" class="inline-block px-6 py-2 font-medium transition-colors bg-[#FFB800] hover:bg-[#E5A600] text-black rounded-md">
          About Us
        </a>
      </div>
    </div>
  </section>

  <!-- News Section -->
  {{#if news}}
  <section class="py-16" id="newsSection">
    <div class="container mx-auto px-4">
      <h2 class="text-3xl font-bold text-white mb-8">News</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {{#each news}}
        <div class="bg-white rounded-lg overflow-hidden">
          <div class="relative h-64 w-full">
            <img src="{{this.image}}" alt="{{this.title}}" class="w-full h-full object-cover">
          </div>
          <div class="p-6">
            <h3 class="text-xl font-bold mb-2 text-black">{{this.title}}</h3>
            <p class="text-gray-600 mb-4">{{this.description}}</p>
            <form action="/news/{{this.id}}">
              <button type="submit" class="w-full px-6 py-2 font-medium transition-colors bg-[#FFB800] hover:bg-[#E5A600] text-black rounded-md">
                VISUALIZZA
              </button>
            </form>
          </div>
        </div>
        {{/each}}
      </div>
      <div class="mt-8 text-center">
        <a href="/news" class="inline-block px-6 py-2 font-medium transition-colors bg-[#FFB800] hover:bg-[#E5A600] text-black rounded-md">
          Visualizza Tutti
        </a>
      </div>
    </div>
  </section>
  {{/if}}
</main>
{{>footer}}