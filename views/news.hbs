{{>header}}
<div class="pt-24 min-h-screen">
  <div class="container mx-auto px-4">
    <h1 class="text-4xl font-bold text-white mb-8">Latest News</h1>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {{#each news}}
      <div class="bg-white rounded-lg overflow-hidden">
        <div class="relative h-64 w-full">
          <img src="{{this.image}}" alt="{{this.title}}" class="w-full h-full object-cover">
        </div>
        <div class="p-6">
          <h3 class="text-xl font-bold mb-2 text-black">{{this.title}}</h3>
          <p class="text-gray-600 mb-4">{{this.description}}</p>
          <form action="/news/{{this.id}}">
            <button type="submit" class="w-full px-6 py-2 font-medium transition-colors bg-[#FFB800] hover:bg-[#E5A600] text-black rounded-md">
              VISUALIZZA
            </button>
          </form>
        </div>
      </div>
      {{/each}}
    </div>
  </div>
</div>
{{>footer}}